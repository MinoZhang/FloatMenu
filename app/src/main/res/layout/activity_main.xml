<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn.floatmenu.MainActivity">

    <TextView
        android:clickable="true"
        android:layout_marginTop="23dp"
        android:id="@+id/start"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/start_service"
        android:textColor="@drawable/text_color"
        android:text="Start floatMenu service"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/hideStatuBarNaviBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:background="@drawable/hide_service"
        android:textColor="@drawable/text_color"
        android:text="hide StatusBar And NavigationBar"/>
</RelativeLayout>
